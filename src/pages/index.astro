        }
      
        .shadow-neon {
          box-shadow: 0 0 5px var(--border-color), 0 0 10px var(--border-color), 0 0 20px var(--border-color), 0 0 40px var(--border-color), 0 0 80px var(--border-color);
        }
      
        .glow-effect {
          animation: glow 1.5s infinite alternate;
        }
      
        @keyframes glow {
          0% {
            box-shadow: 0 0 5px var(--border-color), 0 0 10px var(--border-color), 0 0 20px var(--border-color), 0 0 40px var(--border-color), 0 0 80px var(--border-color);
          }
          100% {
            box-shadow: 0 0 10px var(--hover-color), 0 0 20px var(--hover-color), 0 0 30px var(--hover-color), 0 0 40px var(--hover-color), 0 0 60px var(--hover-color);
          }
        }
      
        /* Efecto de hover */
        .group:hover .shadow-neon {
          box-shadow: 0 0 10px var(--hover-color), 0 0 20px var(--hover-color), 0 0 30px var(--hover-color), 0 0 40px var(--hover-color), 0 0 80px var(--hover-color);
